    sleep 10
    if ps aux | grep -q "[q]emu-system"; then
        echo "‚úÖ –°–ò–°–¢–ï–ú–ê –£–°–ü–ï–®–ù–û –ó–ê–ü–£–©–ï–ù–ê"
        echo "üïê –í—Ä–µ–º—è —Ä–∞–±–æ—Ç—ã: 10 —Å–µ–∫—É–Ω–¥"
    else
        echo "‚ö†Ô∏è  –°–ò–°–¢–ï–ú–ê –ó–ê–í–ï–†–®–ò–õ–ê –†–ê–ë–û–¢–£"
    fi
