    sleep 10
    if ps aux | grep -q "[q]emu-system"; then
        echo "‚úÖ –°–ò–°–¢–ï–ú–ê –£–°–ü–ï–®–ù–û –ó–ê–ü–£–©–ï–ù–ê"
